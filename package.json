{
  "name": "soapdish-controllers",
  "version": "1.0.0",
  "description": "Utility library to produce express routers and swagger docs from controller classes.",
  "main": "lib/index.js",
  "types": "dts/index.d.ts",
  "files": [
    "/dist",
    "/dts",
    "/readme.md"
  ],
  "scripts": {
    "clean": "rimraf lib dts",
    "prebuild": "npm run clean",
    "build": "tsc -p src",
    "test": "jest"
  },
  "keywords": [
    "express",
    "controller",
    "router",
    "typescript",
    "swagger",
    "decorator"
  ],
  "contributors": [
    {
      "name": "William Matthews",
      "email": "william.matthews@webpt.com"
    }
  ],
  "license": "UNLICENSED",
  "dependencies": {
    "ajv": "^6.10.2",
    "body-parser": "^1.19.0",
    "http-errors": "^1.7.3",
    "http-status-codes": "^1.3.2",
    "lodash": "^4.17.15"
  },
  "devDependencies": {
    "@semantic-release/git": "^7.0.16",
    "@semantic-release/gitlab": "^3.1.7",
    "@semantic-release/npm": "^5.1.13",
    "@types/express": "^4.17.0",
    "@types/http-errors": "^1.6.1",
    "@types/jest": "^24.0.17",
    "@types/json-schema": "^7.0.3",
    "@types/lodash": "^4.14.136",
    "express": "^4.17.1",
    "jest": "^24.9.0",
    "rimraf": "^2.6.3",
    "ts-jest": "^24.0.2",
    "typescript": "^3.5.3"
  },
  "peerDependencies": {
    "express": "^4.17.1"
  },
  "publishConfig": {
    "registry": "https://nexus.wptdev.com/nexus/content/repositories/npm-internal/"
  },
  "release": {
    "verifyConditions": [
      {
        "path": "@semantic-release/gitlab",
        "gitlabUrl": "https://gitlab.webpt.com"
      }
    ],
    "publish": [
      {
        "path": "@semantic-release/gitlab",
        "gitlabUrl": "https://gitlab.webpt.com"
      }
    ],
    "prepare": [
      {
        "path": "@semantic-release/npm",
        "npmPublish": false
      },
      {
        "path": "@semantic-release/git",
        "assets": [
          "package.json",
          "package-lock.json"
        ],
        "message": "chore(release): ${nextRelease.version}\n\n${nextRelease.notes}"
      }
    ],
    "success": false,
    "fail": false
  }
}
